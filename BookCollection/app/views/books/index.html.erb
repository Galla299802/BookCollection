<% if !flash[:notice].blank?%>
    <div class="notice">
        <%= flash[:notice]%>
    </div>
<%end%>


<div class="Books index">
    <h2>Books</h2>

    <%= link_to("Add New Book", new_book_path, :class => 'action_new')%>

    <table class="listing" summary="Book List">
    <tr class="header">
        <th>#</th>
        <th>title</th>
        <th>author</th>
        <th>genre</th>
        <th>price</th>
        <th>published-date</th>
    </tr>
    <% @books.each do |book|%>
    <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.price %></td>
        <td><%= book.publishedDate%></td>
        <td class="actions">
            <%= link_to("show", book_path(book), :class => 'action show') %>
            <%= link_to("Edit", edit_book_path(book), :class => 'action edit')%>
            <%= link_to("Delete", delete_book_path(book) ,:class => 'action delete')%>
        </td>
    </tr>
    <%end%>
    </table>
</div>

